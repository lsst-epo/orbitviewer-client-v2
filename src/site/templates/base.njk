{% from "../partials/icons.njk" import initSpriteSheet %}
{% from "../partials/icons.njk" import icon %}
{% from "../components/toast.njk" import Toast %}
{% from "../components/modal.njk" import Modal %}

<!DOCTYPE html>
<html lang="en">
	{% include 'head.njk' %}

	<body>
        <div class="content"></div>
        {{ initSpriteSheet() }}
        <div class="view">
            <div class="sun"></div>
        </div>

        {% include 'navigation.njk' %}

        <main>
            <a href="/" tabindex="1" class="site-logo">
                <img src="/assets/images/nsf-doe-rubin-observatory-orbitviewer.png" class="logo" alt="{{ copy.logo.alt.en }}">
            </a>

            {{ content | safe }}

            {% include 'objects.njk' %}

            {% include 'wizard.njk' %}
            
            {{ Modal('Things looking a bit slow?', 'Weve noticed some performance issues. A different visualization mode could provide a smoother experience on your device.') }}
            {{ Toast('Maximum date reached. Future positions cannot be calculated. Try exploring within the supported time range', '', 'Maximum date notification', true) }}

            {% include 'toolbar.njk' %}
            {% include 'filters.njk' %}
            {% include 'search.njk' %}
            
            {% include 'timemachine.njk' %}
            {% include 'mapcontrols.njk' %}
        </main>
        

        <script defer type="module">
            const src = "/bundle/main.js";
            import(src).then(module => {});
        </script>
	</body>
</html>