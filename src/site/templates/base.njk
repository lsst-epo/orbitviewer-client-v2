{% from "../partials/icons.njk" import initSpriteSheet %}
{% from "../partials/icons.njk" import icon %}
{% from "../components/toast.njk" import Toast %}

<!DOCTYPE html>
<html lang="en">
	{% include 'head.njk' %}

	<body>
        <div class="content"></div>
        {{ initSpriteSheet() }}
        <div class="view">
            <div class="sun"></div>
        </div>

        {{ content | safe }}

        {% include 'navigation.njk' %}

        <main>
            <a href="/" tabindex="1" class="site-logo">
                <img src="/assets/images/nsf-doe-rubin-observatory-orbitviewer.png" class="logo" alt="NSF DOE Rubin Observatory Orbitviewer logo">
            </a>
            
            {% include 'home.njk' %}
            {% include 'object_detail.njk' %}
            {% include 'onboarding.njk' %}

            {% include 'objects.njk' %}

            {% include 'wizard.njk' %}
            
            {{ Toast('Maximum date reached. Future positions cannot be calculated. Try exploring within the supported time range', '', 'Maximum date notification', true) }}

            {% include 'toolbar.njk' %}
            {% include 'filters.njk' %}
            {% include 'search.njk' %}
            
            {% include 'timemachine.njk' %}
            {% include 'mapcontrols.njk' %}
        </main>
        

        <script defer type="module">
            const src = "./bundle/main.js";
            import(src).then(module => {});
        </script>
	</body>
</html>