{% from '../components/button.njk' import Button %}

<section class="home" aria-hidden="false">
    <div class="home-body">
        <div class="home-triad">
            <img src="/assets/images/rubin-nsf-doe-triad.png" alt="NSF-DOE Vera C. Rubin Observatory logo triad">
        </div>

        <div class="home-heading">
            <h1 class="title">Vera C. Rubin’s 3D Orbit Viewer</h1>
            <h2 class="subtitle">Mapping the Solar System Like Never Before</h2>
        </div>

        <div class="home-action">
            {{ Button('Start exploring', 'button primary medium') }}
        </div>

        <div class="home-count" role="status" aria-live="polite">
            <p class="label">Discoveries Unveiled</p>
            <p class="value" aria-label="745,259 discoveries">745,259</p>
        </div>
    </div>

    <div class="home_foot" role="contentinfo" aria-label="Language selection">
        <ul class="home_foot-list" role="list">
            <li class="home_foot-item">
                <a href="" hreflang="en" aria-current="page">English</a>
            </li>
            <li class="home_foot-item">
                <a href="" hreflang="es">Español</a>
            </li>
        </ul>
    </div>
</section>