{% from '../components/button.njk' import Button %}

<section class="wizard" role="dialog" aria-hidden="true" role="dialog" aria-modal="true" aria-labelledby="wizard-title" aria-describedby="wizard-description">
    <div class="wizard-mask" aria-hidden="true"></div>
    <div class="wizard-focus" aria-hidden="true"></div>
    <div class="wizard_tooltip" role="document">
        <div class="wizard_tooltip-body">
            <header class="heading">
                <h3 id="wizard-title" class="title">Onboarding wizard</h3>
                <p id="wizard-steps" class="steps" aria-label="Step 1 of 4">1/4</p>
            </header>
            <p id="wizard-description" class="description">Lorem ipsum dolor sit amet consectetur. Amet urna sit blandit vel. Aliquam nec sed leo ullamcorper commodo vulputate praesent vitae vel.</p>
            <!-- Add live region for step announcements -->
            <div aria-live="polite" aria-atomic="true" class="sr-only" id="wizard-announcements"></div>
        </div>
        <div class="wizard_tooltip-foot">
            {{ Button('Skip', 'button secondary small') }}
            <div class="button_group" role="group" aria-label="Navigation controls">
                {{ Button('Previous', 'button ghost small', 'chevron-left') }}
                {{ Button('Next', 'button primary small', '', 'chevron-right') }}
            </div>
        </div>
    </div>
</section>