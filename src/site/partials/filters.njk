{% from '../components/buttonicon.njk' import ButtonIcon %}
{% from '../components/button.njk' import Button %}
{% from '../components/rangeslider.njk' import RangeSlider %}
{% from '../components/togglegroup.njk' import ToggleGroup %}

<section class="filters" aria-hidden="true">
    <header class="filters-head">
        {{ ButtonIcon('button_icon secondary medium', 'close') }}
    </header>
    <div class="filters-body">
        <div class="filters_card">
            <div class="filters_card-content">
                <div class="filters_card-head">
                    <h3 class="title">{{ copy.filters.title.en }}</h3>
                    {{ Button('Reset', 'button secondary small') }}
                </div>
                <div class="filters_card-body">
                    <div class="filters_card_field">
                        <label class="filters_card_field-label">
                            <span for="" class="label">{{ copy.filters.discoveries.en }}</span>
                        </label>
                        <div class="filters_card_field-input">
                            {{ ToggleGroup('large', 'discoveries', ['all', 'vera', 'other'], 'all', true, 'Filter objects by discoverer') }}
                        </div>
                    </div>
                    
                    <div class="filters_card_field">
                        <label class="filters_card_field-label">
                            <span for="" class="label">{{ copy.filters.discoveries.en }}</span>
                            <span class="helper">{{ copy.filters.au.en }}</span>
                        </label>
                        <div class="filters_card_field-input">
                            {{ RangeSlider('slider-distance', [0, 100], [0, 100]) }}
                        </div>
                    </div>

                    <div class="filters_card_field">
                        <label class="filters_card_field-label">
                            <span for="" class="label">{{ copy.filters.discovery.en }}</span>
                        </label>
                        <div class="filters_card_field-input">
                            {{ RangeSlider('slider-date', [1900, 2025], [1900, 2025]) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>