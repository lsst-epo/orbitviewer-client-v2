{% from "../components/button.njk" import Button %}
{% from "../components/buttonicon.njk" import ButtonIcon %}
{% from "../components/togglegroup.njk" import ToggleGroup %}

<div class="share" role="dialog" aria-modal="true" aria-labelledby="share-title" aria-hidden="false">
    <div class="share_dialog">
        <div class="share_dialog-head">
            <h2 class="title" id="share-title">Share</h2>
        </div>
        <div class="share_dialog-body">
            <ul class="tab-list">
                <li class="tab-item">
                    <a href="#link" class="tab-link active">
                        <span>Link</span>
                    </a>
                </li>
                <li class="tab-item">
                    <a href="#screen_capture" class="tab-link">
                        <span>Screen capture</span>
                    </a>
                </li>
            </ul>

            <div id="link" class="share_dialog-content" aria-hidden="true">
                <div class="input_group">
                    <div class="input">
                        <input type="url" value="https://orbitviewer-client-dot-skyviewer.uw.r.appspot.com/?x=2&y=348" readonly>
                    </div>
                    {{ Button('Copy', 'button primary medium', 'link') }}
                </div>
            </div>

            <div id="screen_capture" class="share_dialog-content" aria-hidden="false">
                <div class="screen_capture-hero horizontal">
                    <img src="/assets/images/sample/screen_capture.png" alt="image">
                </div>
                <div class="screen_capture-options">
                    {{ ToggleGroup('', 'aspect_ratio', ['Horizontal', 'Vertical', 'Square'], 'Horizontal')}}
                </div>
                <div class="screen_capture-actions">
                    {{ Button('Download image', 'button primary medium', 'download') }}
                </div>
            </div>
        </div>
    </div>
</div>